<h1>Write Post</h1>

<%= form_for(@post) do |f| %> 
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :blog %>
    </div>
  
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>